#!/bin/bash
set -e

crontab_load() {
  USR="${1}"
  DIR="${2}"

  if [[ -d "${DIR}" ]]; then
    echo "[ cron ] LOADING ${DIR}"
    crontab -u "${USR}" "${DIR}"/*
  else
    echo "[ cron ] SKIPPING ${DIR}"
  fi
}

crontab_load root /root/cron.d
crontab_load dev /home/dev/cron.d

/etc/init.d/cron start

apache2-foreground "$@"
